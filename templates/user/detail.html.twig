{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid ">
        <div class="row mb-5 mt-5">
            <div class="col-2 "></div>
            <div class=" col-5 text-center">
                <img src="{{ asset('uploads/photos/')~user.photo }}" alt="photo de profil de {{ app.user.pseudo }}" height="250px" >
            </div>
            <div class=" col-5 ">
                <div class="mb-2 mt-4"> {{ user.pseudo }}</div>
                <div class="mb-2 mt-5"> {{ user.prenom }}</div>
                <div class="mb-2"> {{ user.nom }}</div>
                <div class="mb-2"> {{ user.telephone }}</div>
                <div class="mb-2"> {{ user.mail }}</div>
                <div class="mb-2"> {{ user.campus.nom }}</div>
            </div>
        </div>
    </div>
    <div class="text-center mt-5">
        <input  type="reset" class="btn btn-lg btn-secondary " value="Retour" onclick= "document.location.href='{{ path('sortie_listeSortie') }}'">
    </div>

{% endblock %}

